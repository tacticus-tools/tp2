{
	"$schema": "https://biomejs.dev/schemas/2.4.1/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/*.tsx",
			"**/*.ts",
			"**/*.json",
			"!**/src/routeTree.gen.ts",
			"!**/src/styles.css",
			"!**/convex/_generated/**/*",
			"!**/data.raw.json",
			"!**/data.generated.json",
			"!**/data.generated.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"security": {
				"noBlankTarget": "error",
				"noDangerouslySetInnerHtml": "error",
				"noDangerouslySetInnerHtmlWithChildren": "error",
				"noGlobalEval": "error",
				"noSecrets": "off"
			},
			"performance": {
				"noAccumulatingSpread": "error",
				"noAwaitInLoops": "error",
				"noBarrelFile": "error",
				"noDelete": "error",
				"noDynamicNamespaceImportAccess": "error",
				"noImgElement": "off",
				"noNamespaceImport": "error",
				"noReExportAll": "error",
				"noUnwantedPolyfillio": "error",
				"useGoogleFontPreconnect": "error",
				"useTopLevelRegex": "error",
				"useSolidForComponent": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
