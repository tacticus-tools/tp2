	"scripts": {
		"init": "bun install && npx convex dev --once --configure=new",
		"dev:backend": "bun run convex dev",
		"dev:frontend": "vite dev --port 3000",
		"dev": "bun run --parallel \"dev:backend\" \"dev:frontend\"",
		"build": "vite build",
		"preview": "vite preview",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"deploy": "bun run build && wrangler deploy",
		"format": "biome format",
		"lint": "biome lint && eslint",
		"check": "biome check",
		"fix": "biome check --fix",
		"build-ci": "biome check --fix && eslint --fix . && biome check && eslint . && tsc --noEmit && bun run build"
	},
